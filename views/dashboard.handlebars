{{!-- this is being rendered by the GET FOR DASHBOARD SAHOWING BLOGPOSTS SPECIFC TO LOGGED IN USER --}}
{{#if user.blogposts.length}}
  <h1>Blog Posts By {{user.name}}</h1>
  {{#each user.blogposts as |blogpost|}}
    <div class="row m-2">
      <div>
        <h2><a id="blogpostTitle" class="hyperlink" href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h2>
        <p>{{blogpost.date_created}}</p>
      </div>
      <div class="content-box">
        <p>{{blogpost.content}}</p>
      </div>
      <div>
        <form class="delete-form">
          <button class="delete-post-btn btn" data-id="{{blogpost.id}}" >Delete</button>
          <a href="/blogpost_edit/{{blogpost.id}}" class="edit-post-btn btn">Edit</a>
        </form>
      </div>
    </div>
  {{/each}} 
{{else}}
{{/if}}

<div class="create-new">
  <a class="link btn" href="/blogpost_input">Create A New Post</a>
</div>

<script src="/js/deletepost.js"></script>
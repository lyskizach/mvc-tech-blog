<htmnl lang="en">

    <head>
        <meta charset='UTF-8'/>
         <meta name='viewport' content='width=device-width, initial-scale=1.0'/>
         <title>MVC-Tech-Blog</title>
        <link
            rel='stylesheet'
            href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css'
            integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO'
            crossorigin='anonymous'
        />
         <link rel='stylesheet' href='public/css/style.css'/>
    </head>

    <body>
        <div class='flex-column justify-space-around'>
        <div id='header'>
            <header
            class='display-flex justify-space-between align-left p-2' id='header'>
            <h1><a id='welcome' href='/'>Welcome to the MVC Tech Blog</a></h1>
            <div class='nav justify-content-end'>
                <li class='nav-item'>
                <nav id='login-nav' class='nav-link'>
                    <!-- Conditionally render login or logout links -->
                    {{#if logged_in}}
                    <a class='profile' href='/profile'>Profile</a>
                    |
                    <button class='no-button' id='logout'>Logout</button>
                    {{else}}
                    <a class='login' href='/login'>Login/Sign-up</a>
                    {{/if}}
                </nav>
                </li>
            </div>
            </header>

      </div>
      <main class='container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>
        <div class="maker-names">
          <p>*Made By Zach*</p>
        </div>
      </footer>
      
    </div>
    </body>

</htmnl>